{
  "name": "workhub-dashboard",
  "version": "1.0.0",
  "description": "Clean dashboard for work and personal projects â€” runs as a Windows desktop app via Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64",
    "pack": "electron-builder --dir",
    "test": "node --check main.js && node --check renderer/app.js && echo Syntax OK"
  },
  "devDependencies": {
    "electron": "^33.4.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.workhub.dashboard",
    "productName": "WorkHub",
    "icon": "assets/icon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dashboard.html",
      "main.js",
      "package.json",
      "renderer/",
      "assets/"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "WorkHub"
    }
  }
}
