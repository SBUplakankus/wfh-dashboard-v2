{
  "name": "wfh-dashboard-v2",
  "version": "1.0.0",
  "description": "Simple Hub Dashboard to connect my stuff",
  "main": "public/main.js",
  "scripts": {
    "test": "vitest run",
    "start": "vite --port 3000",
    "build": "vite build",
    "dev": "vite --port 3000",
    "preview": "vite preview --port 4173",
    "electron": "electron .",
    "build:app": "npm run build && electron-builder --config electron-builder.config.js --publish never",
    "build:app:win": "npm run build && electron-builder -w --config electron-builder.config.js --publish never",
    "build:app:mac": "npm run build && electron-builder -m --config electron-builder.config.js --publish never",
    "build:app:linux": "npm run build && electron-builder -l --config electron-builder.config.js --publish never"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SBUplakankus/wfh-dashboard-v2.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SBUplakankus/wfh-dashboard-v2/issues"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "framer-motion": "^12.34.0",
    "ical.js": "^2.2.1",
    "lucide-react": "^0.564.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "private": true,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.24",
    "dotenv": "^17.2.3",
    "jsdom": "^28.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^4.9.5",
    "vite": "^7.1.10",
    "vite-plugin-env-compatible": "^2.0.1",
    "vitest": "^3.2.4",
    "electron-builder": "^26.7.0",
    "electron": "^40.4.1"
  }
}
